{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "target": "main",
      "predeploy": "npm run build",
      "public": "__sapper__/export",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 2321
    }
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}
